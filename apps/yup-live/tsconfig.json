{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@cloudflare/workers-types/2023-07-01"]
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./src/**/*.vue",
    "./worker/**/*.ts",
    "../../packages/icons/src/**/*.vue",
    "../../packages/shared/src/**/*.*",
    "../../packages/components/**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "build", "test", "example"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
