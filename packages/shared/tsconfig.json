{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", ],
    "skipLibCheck": true,
    "types": ["vite/client"],
    "outDir": "./dist",
    "baseUrl": ".",
  },
  "include": ["./src/**/*.js", "./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.tsx", "./src/**/*.vue", "./src/**/*.vue"],
  "exclude": ["node_modules", "dist", "build", "test", "example"]
}